@using MyFilmBevy.Models.View

@model LandingPageVM

@{
    ViewData["Title"] = "My Movie Bevy";
}

<style>
    .clampOverview {
        /* 
        This will help align the card section by
        limiting the overview to 4 wrapped lines
        */
        display: -webkit-box;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .clampTitle {
        /* 
        This will help align the card sections by
        limiting the Title to two lines max.
        */
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    h5-card-tittle {
        /*
        This will help align the card sections by
        making the title a consistent size
        */
        height: 2.5em;
    }
</style>

